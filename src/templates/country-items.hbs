{{#each this}}
<div class="country_card">
    <h2 class="country_card_title">{{name}}</h2>
    <div class="country_card_body">
        <div class="country_card_item">
            <p class="country_card_text">Capital: {{capital}}</p>
            <p class="country_card_text">Population: {{population}}</p>
            <ul class="country_group">languages: </ul>
            {{#each languages}}
            <li class="country_group_item">{{this.name}}</li>
            {{/each}}
            </ul>
        </div>
        <div class="country_card_img">
            <img src="{{flag}}" alt="{{name}}">
        </div>
    </div>
</div>
{{/each}}